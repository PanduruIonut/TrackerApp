<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/images"
            android:layout_marginTop="-19dp"
            android:textColor="#FF6347"
            android:textStyle="bold"
            android:text="Type" />

        <TextView
            android:id="@+id/crowdedness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/percentageBar"
            android:layout_alignStart="@+id/percentageBar"

            android:layout_alignLeft="@+id/percentageBar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="3dp"
            android:text="Not Busy - 0%" />

        <ProgressBar
            android:id="@+id/percentageBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/images"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img1" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/images"
            android:textStyle="bold"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="-2dp"
            android:text="Names" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_alignBottom="@+id/images"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="-2dp"
            android:paddingTop="2dp"
            android:text="Emails" />
    </RelativeLayout>

</LinearLayout>